<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="skhu.mapper.RuleMapper">

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT [RULE]
		(r_num, r_title, r_content, r_writeTime)
		VALUES (0, #{r_title}, #{r_content}, GETDATE())
	</insert>

	<update id="updater_num">
		UPDATE [RULE]
		SET r_num = r_num + 1
		WHERE r_id = #{r_id}
	</update>

	<select id="selectCount" resultType="int">
		SELECT COUNT(*)
		FROM [RULE]
	</select>

	<select id="selectPage" resultType="skhu.model.Rule">
        SELECT *
        FROM [RULE]
        order by r_id desc
	</select>
	<select id="selectById" resultType="skhu.model.Rule">
        SELECT *
        FROM [RULE]
        WHERE id = #{id}
    </select>
</mapper>

